\mode<presentation>

%
% color definitions
%
\definecolor{sprd_turquoise}{HTML}{00B2A5}
\definecolor{sprd_brown}{HTML}{443634}
% red, blue and green are specified by myself. These are no official company colors!
\definecolor{sprd_red}{HTML}{BF0E0A}
\definecolor{sprd_blue}{HTML}{3100C9}
\definecolor{sprd_green}{HTML}{79C90A}
\definecolor{sprd_ochre}{HTML}{BF7A0A}
\definecolor{lightgray}{rgb}{0.90,0.90,0.90}
\definecolor{darkgray}{rgb}{0.15,0.15,0.15}

%
% set colors
%
\setbeamercolor{palette primary}{fg=white, bg=sprd_turquoise}
\setbeamercolor{palette secondary}{fg=white, bg=sprd_turquoise!90!black}
\setbeamercolor{palette tertiary}{fg=white, bg=sprd_turquoise!70!black}
\setbeamercolor{palette quaternary}{fg=white, bg=sprd_turquoise!50!black}

\setbeamercolor{palette sidebar primary}{fg=white, bg=sprd_turquoise}
\setbeamercolor{palette sidebar secondary}{fg=white, bg=sprd_turquoise!90!black}
\setbeamercolor{palette sidebar tertiary}{fg=white, bg=sprd_turquoise!70!black}
\setbeamercolor{palette sidebar quaternary}{fg=white, bg=sprd_turquoise!50!black}

\setbeamercolor{normal text}{fg=darkgray}
\setbeamercolor{alerted text}{fg=sprd_red}
\setbeamercolor{example text}{fg=sprd_green}

\setbeamercolor{titlelike}{bg=white, fg=sprd_turquoise}
\setbeamercolor{block title}{fg=sprd_turquoise, bg=lightgray}
\setbeamercolor{block title alerted}{fg=white, bg=sprd_red}
\setbeamercolor{block title example}{fg=white, bg=sprd_green}

\setbeamercolor{structure}{fg=sprd_turquoise}

\setbeamercolor{block body}{bg=lightgray}
\setbeamercolor{block body example}{bg=sprd_green!40!white}
\setbeamercolor{block body alerted}{bg=sprd_red!40!white}

\setbeamercolor{section in head/foot}{parent=palette primary}
\setbeamercolor{subsection in head/foot}{parent=palette secondary}
\setbeamercolor{title in head/foot}{parent=palette tertiary}
\setbeamercolor{author in head/foot}{parent=palette quaternary}

\mode<all>